{
    "manifest_version": 3,
    "name": "DeepShare",
    "version": "1.0",
    "description": "分享 DeepSeek AI 对话的浏览器插件",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": "icons/icon48.png",
        "default_title": "DeepShare",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "clipboard-write",
        "desktopCapture"
    ],
    "host_permissions": [
        "https://chat.deepseek.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chat.deepseek.com/*"
            ],
            "css": [
                "scripts/style.css"
            ],
            "js": [
                "lib/html2canvas.min.js",
                "scripts/captureMessages.js",
                "scripts/getMessages.js",
                "scripts/injectShare.js",
                "scripts/main.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "lib/html2canvas.min.js"
            ],
            "matches": [
                "https://chat.deepseek.com/*"
            ]
        }
    ]
}