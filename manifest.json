{
    "manifest_version": 3,
    "default_locale": "en",
    "name": "__MSG_extensionName__",
    "version": "1.1.5",
    "description": "__MSG_extensionDescription__",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": "icons/icon48.png",
        "default_title": "DeepShare",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://chat.deepseek.com/*",
        "https://yuanbao.tencent.com/chat/*",
        "https://www.doubao.com/chat/*",
        "https://chatgpt.com/c/*",
        "https://grok.com/chat/*",
        "https://www.tongyi.com/*",
        "https://xinghuo.xfyun.cn/desk*",
        "https://chatglm.cn/main/*",
        "https://poe.com/chat/*",
        "https://openrouter.ai/chat?*",
        "https://monica.cn/home/chat/*",
        "https://www.wenxiaobai.com/*",
        "https://askmanyai.cn/chat/*",
        "https://bot.n.cn/chat/*",
        "https://chat.yixiaai.com/chat/?*",
        "https://www.wanzhi.com/chat/*",
        "https://www.zhihu.com/*",
        "https://gemini.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chat.deepseek.com/*"
            ],
            "css": [
                "scripts/style.css"
            ],
            "js": [
                "lib/html2canvas.min.js",
                "lib/dom-to-image.min.js",
                "lib/katex.min.js",
                "scripts/notifications.js",
                "scripts/captureMessages.js",
                "scripts/getMessages.js",
                "scripts/injectShare.js",
                "scripts/copyKatex.js",
                "scripts/docxConverter.js",
                "scripts/injectDocxButton.js",
                "scripts/captureDeepSeek.js",
                "scripts/main.js"
            ]
        },
        {
            "matches": [
                "https://yuanbao.tencent.com/chat/*",
                "https://grok.com/chat/*",
                "https://www.tongyi.com/*",
                "https://xinghuo.xfyun.cn/desk*",
                "https://chatglm.cn/main/*",
                "https://poe.com/chat/*",
                "https://openrouter.ai/chat?*",
                "https://monica.cn/home/chat/*",
                "https://www.wenxiaobai.com/*",
                "https://askmanyai.cn/chat/*",
                "https://bot.n.cn/chat/*",
                "https://chat.yixiaai.com/chat?*",
                "https://www.wanzhi.com/chat/*"
            ],
            "css": [
                "scripts/style.css"
            ],
            "js": [
                "lib/katex.min.js",
                "scripts/notifications.js",
                "scripts/copyKatex.js"
            ]
        },
        {
            "matches": [
                "https://chatgpt.com/*"
            ],
            "css": [
                "scripts/style.css"
            ],
            "js": [
                "lib/katex.min.js",
                "scripts/notifications.js",
                "scripts/copyKatex.js",
                "scripts/docxConverter.js",
                "scripts/injectGptButton.js"
            ]
        },
        {
            "matches": [
                "https://www.doubao.com/chat/*"
            ],
            "css": [
                "scripts/style.css"
            ],
            "js": [
                "lib/katex.min.js",
                "scripts/notifications.js",
                "scripts/copyKatex4Doubao.js"
            ]
        },
        {
            "matches": [
                "https://www.zhihu.com/*"
            ],
            "css": [
                "scripts/style.css"
            ],
            "js": [
                "lib/katex.min.js",
                "scripts/notifications.js",
                "scripts/copyKatex4Zhihu.js"
            ]
        },
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "css": [
                "scripts/style.css"
            ],
            "js": [
                "lib/katex.min.js",
                "scripts/notifications.js",
                "scripts/copyKatex.js",
                "scripts/docxConverter.js",
                "scripts/injectGeminiButton.js"
            ]
        }
    ]
}